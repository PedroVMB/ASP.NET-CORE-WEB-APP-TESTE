@page
@model CrudWithRazorPages.Pages.ProductMaster.IndexModel

@{
    ViewData["Title"] = "Default";
}

<h1>Default</h1>
<hr />

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Amount)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Product != null && Model.Product.Any())
        {
            @foreach (var item in Model.Product)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        } 
        else
        {
            <tr>
                <td colspan="4" class="text-center">
                    Products not available in the database
                </td>
            </tr>
        }
    </tbody>
</table>
